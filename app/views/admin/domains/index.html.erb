<p id="notice"><%= notice %></p>

<h1>Listing Domains</h1>

<table>
  <thead>
    <tr>
      <th>Poll ID</th>
      <th>Domain</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.poll.short_name %></td>
        <td><%= domain.domain %></td>
        <td><%= link_to 'Edit', edit_admin_domain_path(domain) %></td>
        <td><%= link_to 'Remove', admin_domain_path(domain), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Domain', new_admin_domain_path %>
