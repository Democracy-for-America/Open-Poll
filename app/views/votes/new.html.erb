<% unless params[:drag] == 'false' %>
  <!-- Drag and drop form -->
  <% if @vote.errors.any? || params['candidate_slug'] || params['i_voted_for'] %>
    <%= render 'drop_div' %>
    <div id="red-ribbon" class="red-gradient ribbon" style="height: 36px; box-shadow: 0px 5px 10px #999;">
      <% if @vote.errors.any? %>
        <h3 style="display: none;"></h3>
      <% else %>
        <h3><a id="clickButton" href="#" onclick="selectPicks(); return false;">CAST YOUR VOTE</a></h3>
      <% end %>
    </div>
    <div style="margin: 32px auto 0;">
    <%= render 'candidates' %>
  <% else %>
    <% cache("candidiates/#{@poll.id}", expires_in: 5.minutes) do %>
      <%= render 'drop_div' %>
      <div id="red-ribbon" class="red-gradient ribbon" style="height: 36px; box-shadow: 0px 5px 10px #999;">
        <h3 style="display: none;"></h3>
      </div>
      <div style="margin: 32px auto 0;">
      <%= render 'candidates' %>
    <% end %>
  <% end %>
  <%= render 'form' %>
  </div>
<% else %>
  <!-- Non-visual form for folks with screen readers & those experiencing difficulties with the interface -->
  <%= render 'non_visual' %>
<% end %>

<% if params[:drag] == 'false' %>
<% else %>
  <p style="text-align: center;"><a href="?drag=false" style="color: #049;">Having trouble using the site? <span style="border-bottom: dashed 1px #049;">Click here</span>.</a></p>
<% end %>