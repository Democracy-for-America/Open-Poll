<%= render 'drop_div' %>
<div id="red-ribbon" class="red-gradient ribbon" style="height: 36px; box-shadow: 0px 5px 10px #999;">
  <h3 style="display: none;"></h3>
</div>

<div class="container" style="margin: 32px auto 0;">

  <p class="half-bottom" style="text-align: center;">
    <strong style="font-size: 22px;">SHARE YOUR TOP PICK:</strong>
  </p>

  <p class="add-bottom" style="text-align: center;">
    <%= link_to image_tag('facebook.png', alt: 'Facebook'), @vote.facebook_link(@domain, params[:poll]), class: "social", target: "_blank" %>
    <%= link_to image_tag('twitter.png', alt: 'Twitter'), @vote.twitter_link(@domain, params[:poll]), class: "social", target: "_blank" %><br>
  </p>

  <p class="add-bottom" style="text-align: center;">
    <strong style="font-size: 22px;">LINK TO SHARE YOUR TOP PICK:<br /></strong><span style="font-size: 18px;"><%= @vote.share_link(@domain, params[:poll]) %></span><br><br>
  </p>

  <p class="half-bottom" style="text-align: center;">
    <strong style="font-size: 22px;">CONTRIBUTE:</strong>
  </p>

  <p style="text-align: center;">
    <%= link_to image_tag('actblue.png', alt: 'Contribute via ActBlue'), @poll.donation_url %></strong>
  </p>

  <p class="half-bottom" style="text-align: center; border-top: solid 2px #CCC; max-width: 500px; margin: auto;">
    Other Democracy for America members voted for:
    <div style="text-align: center;">
      <%= render 'results' %>
    </div>
  </p>

</div>